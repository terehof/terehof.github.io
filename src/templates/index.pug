extends layout/layout

block title
    | Sergey Terehov | Web-development

block content
    include components/header

    section.section.section-home#home
        .section-home__video-bg
            .video-wrap
                video(autoplay muted loop poster="img/Travaho.jpg")
                    source(src="video/Travaho.mp4" type="video/mp4")
                    source(src="video/Travaho.webm" type="video/webm")
        .section-home__content#home-content(data-enllax-ratio="-0.23" data-enllax-type="foreground")
            .section-home__title.
                Hello! My name is Sergey.
                <br>
                I make <div id="typed" class="typed"></div>
            .section-home__subtitle I strive to make this <span>world</span> web better.
            a.section-home__button.btn-primary.btn-primary--lg.scrollto(href="#portfolio") Go to portfolio

    section.section.section-services#services
        .container
            h2.section__title My Services

            .services-list

                -var myServices = services

                each service in myServices
                    .service
                        img.service__icon(src="img/services/"+service.icon)
                        p.service__title!= service.title
                        .service__descrip!= service.text

    section.section.section-portfolio#portfolio
        .container
            h2.section__title Some of my works
                p.section__subtitle Want to see more examples? <a href="mailto:terehovsergej@gmail.com">Email me</a>.

            .projects-filter
                .projects-filter__item.active(data-filter="*") All
                .projects-filter__item(data-filter=".wordpress") Wordpress
                .projects-filter__item(data-filter=".psd2html") PSD-to-HTML
                .projects-filter__item(data-filter=".responsive") Responsive


            -var myProjects = projects;
            .projects
                each project, index in myProjects
                    div(class='project ' + project.tags data-fancybox data-type="ajax" data-src="/project-modals.html" data-filter="#"+index)
                        .project__inner
                        .project__bg
                            img(src='img/projects/'+ project.imageSmall alt=project.title data-duration=project.animDuration)
                        .project__text
                            .project__title!= project.title
                            .project__subtitle!= project.descrip
                            .project__btn More

    section.section.section-feedbacks#feedbacks
        .container
            h2.section__title A Few Feedbacks
                p.section__subtitle What clients say about me

            -var myFeedbacks = feedbacks
            .feedbacks
                each feedback in myFeedbacks
                    .feedback
                        i.feedback__icon.fa.fa-quote-left(aria-hidden="true")
                        blockquote.feedback__text= feedback.text
                        p.feedback__author= feedback.author

            a.all-feedbacks-link(href="https://www.upwork.com/o/profiles/users/_~011cae1b0c8033da54/" target="_blank") More feedbacks on UpWork




